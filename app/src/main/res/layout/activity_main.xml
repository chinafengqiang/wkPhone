<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >



    <LinearLayout
        android:id="@+id/buttom_bar_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:background="@color/bar_bg_color"
        android:orientation="horizontal" >

        <RelativeLayout style="@style/ButtomBar" >

            <ImageButton
                android:id="@+id/buttom_course"
                style="@style/ButtomBarImgBtn1"
                android:background="@drawable/bar_course"
                android:contentDescription="@string/app_name" />
        </RelativeLayout>

        <RelativeLayout style="@style/ButtomBar" >

            <ImageButton
                android:id="@+id/buttom_study"
                style="@style/ButtomBarImgBtn1"
                android:background="@drawable/bar_study"
                android:contentDescription="@string/app_name" />
        </RelativeLayout>



        <RelativeLayout style="@style/ButtomBar" >

            <ImageButton
                android:id="@+id/buttom_user_setting"
                style="@style/ButtomBarImgBtn1"
                android:background="@drawable/bar_user_setting"
                android:contentDescription="@string/app_name" />
        </RelativeLayout>


        <RelativeLayout style="@style/ButtomBar" >

            <ImageButton
                android:id="@+id/buttom_download"
                style="@style/ButtomBarImgBtn1"
                android:background="@drawable/bar_download"
                android:contentDescription="@string/app_name" />
        </RelativeLayout>


    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@id/buttom_bar_group"
        android:background="@color/devide_line" />

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/line" />

</RelativeLayout>