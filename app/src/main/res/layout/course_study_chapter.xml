<com.xy.view.SlidingMenu xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_menu"
    xmlns:sdm="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:scrollbars="none"
    sdm:rightPadding="0dp" >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        >

        <include layout="@layout/course_study_chapter_left_bar" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#fff"
            android:orientation="vertical"
            >
            <include android:id="@+id/bc_title" layout="@layout/course_study_chpater_title_bar" />

            <FrameLayout
                android:id="@+id/study_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="点击左侧菜单"
                />
        </LinearLayout>
    </LinearLayout>


</com.xy.view.SlidingMenu>